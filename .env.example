# Weather Prediction System - Environment Variables
# Copy this file to .env and fill in your actual values

# REQUIRED: OpenWeather API Configuration
# Get your FREE API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# REQUIRED: Google Gemini API Configuration
# Get your FREE API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Authentication Configuration
# Generate a secure random string for production
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Database Configuration (OPTIONAL - can run without database)
# Set USE_MOCK_DB=true to run without PostgreSQL
USE_MOCK_DB=true
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_USER=weather_user
TIMESCALEDB_PASSWORD=weather_pass
TIMESCALEDB_DATABASE=weather_db

# Application Configuration
LOG_LEVEL=INFO
CACHE_TTL_MINUTES=30

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
